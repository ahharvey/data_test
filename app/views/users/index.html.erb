<h1>All Users</h1>

<table class="users">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
	<td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><span class='controls'>	
		<%= link_to 'Edit', edit_user_path(user) %> | 
		<%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
	</span></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path, :class => "button round" %>
