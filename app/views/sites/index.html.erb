<h1>All Sites</h1>

<table class="sites">
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
	<td><%= link_to site.name, site %></td>
    <td><%= site.country %></td>
    <td><span class='controls'>
    	<%= link_to 'Edit', edit_site_path(site) %> | 
    	<%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %>
	</span></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Site', new_site_path, :class => "button round" %>
